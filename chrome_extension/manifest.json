{
  "manifest_version": 3,
  "name": "NewTabs",
  "version": "4.2.0",
  "description": "Eine einfache, aber m√§chtige Newtab-Seite",
  "permissions": ["tabs", "storage"],
  "chrome_url_overrides": {
    "newtab": "site/index.html"
  },
  "background": {
    "service_worker": "background_scripts/giveFocus.js"
  },
  "icons": {
    "16": "icons/Icon-16x16.png",
    "48": "icons/Icon-48x48.png",
    "128": "icons/Icon-128x128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; font-src 'self'; connect-src 'self' https://picsum.photos https://i.picsum.photos/; img-src 'self' data:"
  }
}
